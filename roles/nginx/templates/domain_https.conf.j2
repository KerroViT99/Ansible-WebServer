server {
    listen                {{ ansible_ssh_host }} ssl http2;
    listen                [::]:443 ssl http2;
    server_name           {{ domain_name }};
    root                  /var/www/{{ domain_name }}/public;
    client_body_timeout   {{ client_body_timeout }}s;
    client_header_timeout {{ client_header_timeout }}s;
    charset utf-8;

    ssl_certificate       {{ ssl_certificate_path }};
    ssl_certificate_key   {{ ssl_certificate_key_path }};

    if ($request_method !~ ^(GET|POST|HEAD)$) {
        return '405';
    }

    access_log /var/log/nginx/{{ domain_name }}.access.log;
    error_log  /var/log/nginx/{{ domain_name }}.error.log warn;

    index index.php index.html;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        proxy_pass http://{{ ansible_ssh_host }}:{{ apache_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    include ansiblewebserver.configs/security.conf;
    include ansiblewebserver.configs/general.conf;
}

server {
    listen      {{ ansible_ssh_host }}:80;
    listen      [::]:80;
    server_name {{ domain_name }};
    return      301 https://{{ domain_name }}$request_uri;
}
